@model DogCRM.Areas.Admin.Models.TokenVerifyModel

@{
    ViewBag.Title = "Token Verify";
}

@using (Html.BeginForm("TokenVerify", "Login", FormMethod.Post))
{
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Token Verify
            </h1>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="box box-primary">
                <div class="login-box-body">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.HiddenFor(x => x.Email)
                        @Html.HiddenFor(x => x.UserId)
                        @Html.LabelFor(model => model.Token, htmlAttributes: new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Token, new { @class = "form-control", @placeholder = "Enter Token", @autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.Token, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="box-footer">
                        <div class="pull-left">
                            <button id="btncancel" type="button" class="btn btn-danger" data-dismiss="modal" onclick="location.href='@Url.Action("Login","Login")';">Cancel</button>
                            <button id="btnSave" type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div>
        </section>
        <!-- /.content -->
    </div>
}



